<style lang="scss">
  @use "../style/responsive" as r;
  li {
    list-style-position: inside;
    padding-left: 1.1rem;
    text-indent: -0.95rem;
    a {
      color: var(--text);
      font-size: 0.7rem;
      text-decoration: none;
      vertical-align: super;
      &:hover,
      &:visited,
      &:hover:visited,
      &:active {
        background-color: var(--background);
