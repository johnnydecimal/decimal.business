---
interface Props {
  src: string;
}

const { src } = Astro.props;
const lightSrc = src.replace(".", "-light.");
const darkSrc = src.replace(".", "-dark.");
---

<!-- <img src=`/img/${src}` width="800" /> -->
<picture>
  <source media="(prefers-color-scheme: light)" srcset=`/img/${lightSrc}` />
  <source media="(prefers-color-scheme: dark)" srcset=`/img/${darkSrc}` />
  <img src={`/img/${src}`} width="800" />
</picture>

<style lang="scss">
  @use "../style/responsive" as r;

  img {
    border: 2px solid #459cae;
    margin: 2rem 0;

    @include r.mobile {
      border-left: 0;
      border-right: 0;
      margin: 1rem 0;
    }
  }
</style>
