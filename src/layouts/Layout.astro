---
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} â€¢` : ""} Decimal.Business</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Mono:wght@400;500;700&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global lang="scss">
  @use "../style/reset";
  @use "../style/colours";
  @use "../style/responsive" as r;

  html {
    background-color: var(--background);
    color: var(--text);
    font-family: "Playfair Display", serif;
    font-optical-sizing: auto;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 1.5;
  }

  a {
    color: var(--link);
    &:visited {
      color: var(--link-visited);
    }
    &:hover {
      background-color: var(--link-hover-bg);
      color: var(--link-hover);
    }
    &:hover:visited {
      background-color: var(--link-visited-hover-bg);
    }
    &:active {
      color: var(--link-hover-bg);
    }
    &:active:visited {
      color: var(--link-visited-hover-bg);
    }
  }

  code {
    background-color: var(--code-bg);
    border-bottom: 2px solid var(--code-border);
    font-family: "Fira Mono";
    font-size: 0.95rem;
    padding-inline: 0.2rem;
    padding-top: 0.2rem;
  }

  h1 {
    border-bottom: 3px solid var(--text);
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }
  h2,
  h3 {
    margin: 2rem 0 1rem 0;
  }

  p {
    font-size: 20px;
    + p {
      margin-top: 1em;
    }
  }

  section[data-footnotes] {
    display: none;
  }
</style>
